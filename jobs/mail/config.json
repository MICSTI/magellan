{
  "name": "mail-job",
  "description": "Sends an e-mail to a all members of an array of e-mail addresses",
  "entry": "index.js",
  "params": {
    "safemode": true,
    "mail": {
      "subject": "Test Subject",
      "useText": null,
      "useFile": "mails/test.html",
      "replace": {
        "{BRAND_COLOR}": "#81cfe0",
        "{USERNAME}": "{{context:username}}",
        "{USER_COLOR}": "{{context:color}}"
      }
    }
  }
}